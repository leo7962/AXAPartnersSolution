<UserControl x:Class="Presentation.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ErrorTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFormValid}" Value="False">
                    <Setter Property="BorderBrush" Value="LightGray"/>
                </DataTrigger>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="Background" Value="#FFFFF0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Grid.Row="0" Text="Gestión de Usuarios" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Formulario de Usuario -->
        <GroupBox Grid.Row="1" Header="{Binding SaveButtonText}" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Fila 1: Identificación y Teléfono -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5">
                    <TextBlock Text="Número de Identificación*" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding IdentificationNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Style="{StaticResource ErrorTextBoxStyle}"
                             Margin="0,2,5,0" Height="25"/>
                    <TextBlock Text="{Binding IdentificationNumberError}" 
                               Style="{StaticResource ErrorTextBlockStyle}"
                               Visibility="{Binding IdentificationNumberError, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,5">
                    <TextBlock Text="Teléfono*" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Style="{StaticResource ErrorTextBoxStyle}"
                             Margin="5,2,0,0" Height="25"/>
                    <TextBlock Text="{Binding PhoneError}" 
                               Style="{StaticResource ErrorTextBlockStyle}"
                               Visibility="{Binding PhoneError, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Fila 2: Nombre y Apellido -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5">
                    <TextBlock Text="Nombre*" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Style="{StaticResource ErrorTextBoxStyle}"
                             Margin="0,2,5,0" Height="25"/>
                    <TextBlock Text="{Binding FirstNameError}" 
                               Style="{StaticResource ErrorTextBlockStyle}"
                               Visibility="{Binding FirstNameError, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,5">
                    <TextBlock Text="Apellido*" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Style="{StaticResource ErrorTextBoxStyle}"
                             Margin="5,2,0,0" Height="25"/>
                    <TextBlock Text="{Binding LastNameError}" 
                               Style="{StaticResource ErrorTextBlockStyle}"
                               Visibility="{Binding LastNameError, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Fila 3: Email -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5">
                    <TextBlock Text="Email*" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             Style="{StaticResource ErrorTextBoxStyle}"
                             Margin="0,2,5,0" Height="25"/>
                    <TextBlock Text="{Binding EmailError}" 
                               Style="{StaticResource ErrorTextBlockStyle}"
                               Visibility="{Binding EmailError, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Fila 4: Botones del formulario -->
                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,5">
                    <Button Content="💾 Guardar" 
                            Command="{Binding SaveUserCommand}"
                            Padding="15,5" 
                            Margin="0,0,5,0"
                            Background="{Binding IsFormValid, Converter={StaticResource BooleanToSaveButtonConverter}}"
                            Foreground="White"
                            IsEnabled="{Binding CanSaveUser}"/>

                    <Button Content="❌ Cancelar" 
                            Command="{Binding CancelEditCommand}"
                            Padding="15,5" 
                            Margin="5,0"
                            Background="#FF757575" 
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Lista de Usuarios -->
        <GroupBox Grid.Row="2" Header="📋 Últimos 10 Usuarios Registrados">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="➕ Nuevo Usuario" 
                            Command="{Binding CreateNewUserCommand}"
                            Padding="10,5" 
                            Margin="0,0,5,0"
                            Background="#FF1976D2" 
                            Foreground="White"/>

                    <Button Content="✏️ Editar Usuario" 
                            Command="{Binding EditUserCommand}"
                            Padding="10,5" 
                            Margin="5,0"
                            Background="#FFED6C02"
                            Foreground="White"
                            IsEnabled="{Binding CanEditUser}"/>

                    <Button Content="🗑️ Eliminar Usuario" 
                            Command="{Binding DeleteUserCommand}"
                            Padding="10,5" 
                            Margin="5,0"
                            Background="#FFD32F2F" 
                            Foreground="White"
                            IsEnabled="{Binding CanDeleteUser}"/>

                    <Button Content="🔄 Actualizar Lista" 
                            Command="{Binding LoadUsersCommand}"
                            Padding="10,5" 
                            Margin="5,0"/>
                </StackPanel>

                <!-- DataGrid de usuarios -->
                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding Users}" 
                         SelectedItem="{Binding SelectedUser}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="Identificación" Binding="{Binding IdentificationNumber}" Width="120"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding FirstName}" Width="120"/>
                        <DataGridTextColumn Header="Apellido" Binding="{Binding LastName}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Phone}" Width="100"/>
                        <DataGridTextColumn Header="Fecha Creación" 
                                          Binding="{Binding CreatedAt, StringFormat=dd/MM/yyyy HH:mm}" 
                                          Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Mensaje de estado -->
        <Border Grid.Row="3" 
                Background="{Binding StatusMessage, Converter={StaticResource StatusMessageToBackgroundConverter}}"
                BorderBrush="LightGray" 
                BorderThickness="1"
                Padding="10,5"
                CornerRadius="5"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                      FontStyle="Italic"
                      TextWrapping="Wrap"
                      Foreground="{Binding StatusMessage, Converter={StaticResource StatusMessageToForegroundConverter}}"/>
        </Border>
    </Grid>
</UserControl>